<div class="list-item" style="color: white">
  <a class="todo">
    <%= item.todo_name %>
  </a>
  <a class="time">
    <%= item.created_date %>
  </a>

  <div class="icons">
    <form method="POST" action="/todo/edit/<%= item.id %>">
      <button type="submit"><i class="fa-solid fa-pen-to-square"></i></button>
    </form>
    <form method="POST" action="/todo/<%= item.id %>">
      <button type="submit"><i class="fa-solid fa-trash-can"></i></button>
    </form>
  </div>
</div>
